<fieldset id='delivery_method' data-hook>
  <legend><%= t("delivery_method") %></legend>
  <div class="inner" data-hook="delivery_method_inner">
      <p id="email_Address" data-hook>
        <%= label_tag(:email_address, t("email_address") ) %><br />
        <%= text_field_tag(:email_address) %>
      </p>
      
      <p id="mobile_number" data-hook>
        <%= label_tag(:mobile_number, t("mobile_number") ) %><br />
        <%= text_field_tag(:mobile_number) %>
      </p>      
      
  </div>
</fieldset>

<div class="form-buttons" data-hook="buttons">
  <input type="submit" class="continue button primary" value="<%=t("save_and_continue") %>"/>
</div>
