<table class="index" data-hook="order_details" style="width:100%;">
  <tbody id='package-items' data-hook>

    <% @order.order_items.each do |order_item| %>
      <tr data-hook="package_details_line_item_row">
      		<td width="50"><%= order_item.variant.product.name %></td>
      		<td width="20"><%= format_price(order_item.variant.full_price) %></td>
      		<td width="300"><b><%= order_item.package.payload %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>