<!DOCTYPE html>
<html>
  <head>
  <title>MoSeller</title>
  <%= csrf_meta_tag %>
  <meta property="fb:app_id" content="<%= Facebook.config[:client_id] %>">
  <%= render 'shared/stylesheets' %>
  <%= stylesheet_link_tag "frontend" %>
  <%= javascript_include_tag "jquery-1.5.1.min.js" %>
  <%= include_gritter_and_jquery %>
  </head>
  <body>
	<header>
		<div id="logo">
			<%= image_tag "logo.png" %>
		</div>
        <nav>
          <%= render "shared/navigation" %>
        </nav>
	</header>
    <div class="container">
      <section class="round">
      	 <%= gflash %>
         <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
<script src="http://connect.facebook.net/en_US/all.js"></script>
<script>
      FB.init({
        appId: "<%= Facebook.config[:client_id] %>",
        cookie: true,
        xfbml: true,
        oauth: true
      });
</script>