<h2>Orders</h2>
 
<%= will_paginate %> 
 
<table> 
<thead>
	<th width="200px">Order Number</th>
	<th width="200px" text-align="right">Price</th>
	<th width="200px">Order Date</th>
</thead>
<tbody>
<% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.number , order %></td>
    <td text-align="right"><%= format_price(order.customer_total) %></td>
    <td><%= order.created_at %></td>
  </tr>
<% end %>
</tbody>
</table>
 
<br />

<%= will_paginate %>