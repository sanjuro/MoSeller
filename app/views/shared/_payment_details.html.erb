<table class="index" data-hook="order_details" style="width:100%;">
  <tbody id='package-items' data-hook>

    <% @order.payments.each do |payment| %>
      <tr data-hook="package_details_line_item_row">
      		<td width="30%"><%= l(payment.created_at, :format => :long) %></td>
       		<td width="10%"><%= format_price(payment.amount) %></td>
      		<td align="center" width="30%">
		    <% if payment.is_complete %>
			   <span class="status success">Completed</span>
			<% else %>
			    <span class="status error">Pending</span>
			<% end %>
		    </td>
     </tr>
      <br>
    <% end %>
  </tbody>
</table>